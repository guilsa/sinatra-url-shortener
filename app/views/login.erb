<h1>URL Shortener</h1>

<h2>Log in</h2>

<% if @login_failed %>
  <h2> Bad email or password </h2>
<% end %>
<form action="/login" method="post">
  <input type="text" name="email" placeholder="email" />
  <input type="password" name="password" placeholder="password" />
  <input type="submit" value="login" />
</form>
